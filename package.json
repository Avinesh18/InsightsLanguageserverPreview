{
    "name": "insights-language-server",
    "displayName": "[Insights] Insights Language Server",
    "description": "Language server for the Insights query language",
    "version": "1.0.1",
    "publisher": "Temp",
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "keywords": [
        "insights",
        "language",
        "query",
        "azure data explorer",
        "azure"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "markdown.previewScripts": [
            "./main.bundle.js"
        ],
        "markdown.markdownItPlugins": true,
        "languages": [
            {
                "id": "markdown",
                "aliases": [
                    "Markdown",
                    "markdown"
                ],
                "extensions": [
                    ".md"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Insights",
            "properties": {
                "insightsLanguageServer.diagnosticsEnabled": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Whether diagnostics are enabled or not (red squiggly underlines, Problems tab)"
                }
            }
        },
        "commands": [
            {
                "command": "insights.loadSymbols",
                "title": "[Insights] Load Symbols from Cluster"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.0.0",
        "tslint": "^5.16.0",
        "typescript": "^3.5.1"
    },
    "dependencies": {
        "@types/lodash": "^4.14.136",
        "azure-kusto-data": "^0.2.5",
        "clipboardy": "^2.1.0",
        "lodash": "^4.17.19",
        "open": "^6.4.0"
    }
}
